name: Build and Deploy To EC2

on:
  push:
    branches:
      - master
  #Allows run this workflow manually from the Actions tab
  workflow_dispatch:

jobs:
  build:
    runs-on: ubuntu-latest
    steps:
      - name: Checkout repository
        uses: actions/checkout@v4

      - name: Set up Go
        uses: actions/setup-go@v4
        with:
          go-version: 1.x

      - name: Build binary
        run: make build

      - name: Upload the artifact
        uses: actions/upload-artifact@v2
        with:
          name: openim
          path: ./openim

#  test:
#    runs-on: ubuntu-latest
#    steps:
#      - name: test
#        run: go test ./...

  deploy:
    runs-on: ubuntu-latest

    env:
      ENVIRONMENT: DEVELOPMENT
      
    needs:
      - build
    steps:
      - name: Download artifact
        uses: actions/download-artifact@v3
        with:
          name: openim

      - name: Setup SSH
        id: ssh-server
        uses: gaomingyang/ssh-github-action@main
        with:
#          SERVER_NAME: myaws
          SSH_USER: ec2-user
          SSH_HOST: 3.23.31.211
          SSH_PORT: 22
          SSH_KEY: ${{ secrets.SSH_EC2_PRIVATE_KEY }}

      - name: Deploy to EC2
        run: |
          scp ./openim ${{ steps.ssh-server.outputs.SERVER_NAME }}:/var/www/openim
          ssh ${{ steps.ssh-server.outputs.SERVER_NAME }} 'sudo supervisorctl start openim'
